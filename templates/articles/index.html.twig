{% extends 'base.html.twig' %}

{% block title %}Informations{% endblock %}

{% block body %}

    {% for article in articles %}
        <h2><a href="{{ path('infos_article', {'slug': article.slug}) }}">{{ article.titre }}</a></h2>
        <h1>{{ article.titre }}</h1>
        <p>Publié le {{ article.createdAt|date('d/m/Y à h\\hi') }}</p>
        <div>{{ article.contenu|raw }}</div>
        <h2>Commentaires ({{ article.commentaires|length }})</h2>
    {% endfor %}
    {{ knp_pagination_render(articles) }}
{% endblock %}
